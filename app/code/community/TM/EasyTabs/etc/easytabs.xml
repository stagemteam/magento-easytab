<?xml version="1.0"?>
<easytabs>
    <html type="easytabs/tab_html">
        <name>Html content</name>
        <parameters>
            <content>
                <label>Content</label>
                <type>tmcore/adminhtml_widget_form_renderer_wysiwyg</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
            </content>
            <unset>
                <label>Unset(reference::block_alias)</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value></value>
            </unset>
        </parameters>
    </html>
    <template type="easytabs/tab_template">
        <name>Custom Block</name>
        <parameters>
            <custom_option>
                <label>Block</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
            </custom_option>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
            </template>
            <unset>
                <label>Unset(reference::block_alias)</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value></value>
            </unset>
        </parameters>
    </template>
    <attribute type="easytabs/tab_attribute">
        <name>Product attribute</name>
        <parameters>
            <custom_option>
                <label>Attribute Code</label>
                <type>select</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
                <source_model>easytabs/product_attribute_collection</source_model>
            </custom_option>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/catalog/product/attribute.phtml</value>
            </template>
        </parameters>
    </attribute>
    <product_description type="easytabs/tab_product_description">
        <name>Product Desription</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/catalog/product/view/description.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>product.info::description</value>
            </unset>
        </parameters>
    </product_description>
    <product_additional type="easytabs/tab_product_additional">
        <name>Additional Information</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/catalog/product/view/attributes.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>product.info::additional</value>
            </unset>
        </parameters>
    </product_additional>
    <product_upsell type="easytabs/tab_product_upsell">
        <name>We Also Recommend</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>catalog/product/list/upsell.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>product.info::upsell_products</value>
            </unset>
        </parameters>
    </product_upsell>
    <product_related type="easytabs/tab_product_related">
        <name>Related Products</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/catalog/product/related.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>right::catalog.product.related</value>
            </unset>
        </parameters>
    </product_related>
    <product_tags type="easytabs/tab_product_tags">
        <name>Product Tags ({{eval code="getCount()"}})</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/tag/product/list.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>product.info.additional::product_tag_list</value>
            </unset>
        </parameters>
    </product_tags>
    <product_review type="easytabs/tab_product_review">
        <name>Product's Reviews ({{eval  code="getReviewsCollection()->count()"}})</name>
        <parameters>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/review/product/view/list.phtml</value>
            </template>
            <unset>
                <label>Unset</label>
                <type>text</type>
                <visible>1</visible>
                <required>0</required>
                <value>product.info::reviews</value>
            </unset>
        </parameters>
    </product_review>
    <cms type="easytabs/tab_cms">
        <name>CMS Static Block</name>
        <parameters>
            <custom_option>
                <label>Identifier</label>
                <type>select</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
                <source_model>cms/mysql4_block_collection</source_model>
            </custom_option>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value>tm/easytabs/tab/cms.phtml</value>
            </template>
        </parameters>
    </cms>
</easytabs>