    <easytabs_tab_template type="easytabs/tab_template">
        <name>Easy Tab Custom Block</name>
        <description type="desc">Easy Tab Anything Block</description>
        <parameters>
            <custom_option>
                <label>Block</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
            </custom_option>
            <template>
                <label>Template</label>
                <type>text</type>
                <visible>1</visible>
                <required>1</required>
                <value></value>
            </template>
